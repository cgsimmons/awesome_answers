<%= @answer.errors.full_messages.join(', ') %>
<div class="col-xs-12">
  <%= form_for [@question, @answer], remote: true do |f| %>
    <div>
      <div>
        <%= f.label :body %>
      </div>
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <%= f.submit class: "btn btn-default"%>
  <% end %>
  <hr/>
</div>
