<%= @answer.errors.full_messages.join(', ') %>
<div class="col-xs-12">
  <%= form_for [@question, @answer], remote: true do |f| %>
    <div>
      <%= f.text_area :body, class: "form-control", placeholder: "Write your answer!" %>
    </div>
    <%= f.submit class: "btn btn-default"%>
  <% end %>
  <hr/>
</div>
